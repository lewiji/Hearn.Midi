<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>A .net MIDI file implementation</Description>
    <Copyright>Brian Hearn 2022</Copyright>
    <PackageProjectUrl>https://github.com/behearn/Hearn.Midi</PackageProjectUrl>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/behearn/Hearn.Midi</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>MIDI</PackageTags>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <Company>brianhearn.com</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
